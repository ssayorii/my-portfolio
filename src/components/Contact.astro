---
import { FiMail, FiPhone, FiMapPin } from "react-icons/fi";
import { FaTwitter, FaInstagram, FaLinkedinIn, FaGithub } from "react-icons/fa";
---

<section id="contact" class="max-w-5xl mx-auto py-16 px-6 sm:px-12">
  <div class="max-w-5xl mx-auto">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <span class="text-red-400 font-bold tracking-wider uppercase text-sm"
        >Let's Connect</span
      >
      <h2 class="text-3xl sm:text-4xl font-extrabold text-gray-900 mt-2">
        Ready to Start Your Project?
      </h2>
      <div class="relative flex items-center justify-center mt-6 space-x-2">
        <div class="h-1 w-12 bg-red-400 rounded-full" data-section="contact">
        </div>
        <div class="h-1 w-24 bg-red-400 rounded-full" data-section="contact">
        </div>
        <div class="h-1 w-12 bg-red-400 rounded-full" data-section="contact">
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Contact Card -->
<div class="bg-white rounded-2xl shadow-xl overflow-hidden mb-20">
  <div class="grid grid-cols-1 lg:grid-cols-5">
    <!-- Contact Info Side -->
    <div
      class="lg:col-span-2 bg-gradient-to-br from-red-500 to-red-600 p-8 lg:p-12 text-white relative"
    >
      <div
        class="absolute top-0 right-0 -mt-10 -mr-10 w-40 h-40 bg-red-400 rounded-full opacity-20"
      >
      </div>
      <div
        class="absolute bottom-0 left-0 -mb-10 -ml-10 w-40 h-40 bg-red-400 rounded-full opacity-20"
      >
      </div>

      <h3 class="text-2xl font-bold mb-8 relative">Get in Touch</h3>

      <div class="space-y-6 relative z-10">
        <div class="flex items-start">
          <div class="bg-white/20 p-3 rounded-lg">
            <FiMail style={{ width: 20, height: 20 }} />
          </div>
          <div class="ml-4">
            <h4 class="text-lg font-semibold">Email</h4>
            <a
              href="yazan4moh@gmail.com"
              class="text-white/80 hover:text-white transition"
              >yazan4moh@gmail.com</a
            >
          </div>
        </div>
      </div>

      <!-- Social Media Icons -->
      <div class="mt-80 relative z-10">
        <h4 class="text-lg font-semibold mb-4">Follow Me</h4>
        <div class="flex space-x-3">
          <a
            href="#"
            class="bg-white/20 p-3 rounded-full hover:bg-white/30 transition"
          >
            <FaTwitter style={{ width: 20, height: 20 }} />
          </a>
          <a
            href="#"
            class="bg-white/20 p-3 rounded-full hover:bg-white/30 transition"
          >
            <FaInstagram style={{ width: 20, height: 20 }} />
          </a>
          <a
            href="#"
            class="bg-white/20 p-3 rounded-full hover:bg-white/30 transition"
          >
            <FaLinkedinIn style={{ width: 20, height: 20 }} />
          </a>
          <a
            href="#"
            class="bg-white/20 p-3 rounded-full hover:bg-white/30 transition"
          >
            <FaGithub style={{ width: 20, height: 20 }} />
          </a>
        </div>
      </div>
    </div>

    <!-- Contact Form Side -->
    <div class="lg:col-span-3 p-8 lg:p-12">
      <h3 class="text-2xl font-bold text-gray-900 mb-8">Send a Message</h3>

      <form
        id="contact-form"
        action="https://formspree.io/f/mzzrnalz"
        method="POST"
        class="space-y-6"
      >
        <input
          type="text"
          name="_gotcha"
          style="display:none"
          tabindex="-1"
          autocomplete="off"
        />
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <label
              for="name"
              class="block text-sm font-medium text-gray-700 mb-1"
              >Full Name</label
            >
            <input
              type="text"
              id="name"
              name="name"
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-red-400 focus:border-transparent"
              placeholder="John Doe"
              required
            />
          </div>
          <div>
            <label
              for="email"
              class="block text-sm font-medium text-gray-700 mb-1"
              >Email Address</label
            >
            <input
              type="email"
              id="email"
              name="email"
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-red-400 focus:border-transparent"
              placeholder="john@example.com"
              required
            />
          </div>
        </div>

        <div>
          <label
            for="subject"
            class="block text-sm font-medium text-gray-700 mb-1">Subject</label
          >
          <input
            type="text"
            id="subject"
            name="subject"
            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-red-400 focus:border-transparent"
            placeholder="How can I help you?"
            required
          />
        </div>

        <div>
          <label
            for="message"
            class="block text-sm font-medium text-gray-700 mb-1"
            >Your Message</label
          >
          <textarea
            id="message"
            name="message"
            rows="5"
            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-red-400 focus:border-transparent"
            placeholder="Tell me about your project in detail..."
            required></textarea>
        </div>

        <div>
          <button
            type="submit"
            class="inline-flex items-center px-6 py-3 bg-red-500 text-white font-bold rounded-lg hover:bg-red-600 transition duration-300 shadow-lg hover:shadow-xl transform hover:-translate-y-0.5"
          >
            <FiMail style={{ width: 20, height: 20, marginRight: 10 }} />
            Send Message
          </button>
        </div>
      </form>

      <div id="form-success" class="hidden text-green-600 font-semibold mb-4">
        Thank you! Your message has been sent.
      </div>
    </div>
  </div>
</div>

